<?xml version="1.0" encoding="utf-8"?>

<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  IgnorableNamespaces="uap mp">

  <Identity
    Name="@PACKAGE_GUID@"
    Publisher="@PUBLISHER_ID@"
    Version="@VERSION@" />

  <mp:PhoneIdentity PhoneProductId="@PHONE_PRODUCT_ID@" PhonePublisherId="@PHONE_PUBLISHER_ID@"/>

  <Properties>
    <DisplayName>ms-resource:app_name</DisplayName>
    <PublisherDisplayName>@PUBLISHER_DISPLAY_NAME@</PublisherDisplayName>
    <Logo>StoreLogo.png</Logo>
<% for(var i = 0; i < manifest.Properties.length; i++) { -%>
    <%- manifest.Properties[i] %>
<% } -%>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.0.0" MaxVersionTested="10.0.0.0" />
<% for(var i = 0; i < manifest.Dependencies.length; i++) { -%>
    <%- manifest.Dependencies[i].toString() %>
<% } -%>
  </Dependencies>

  <Resources>
    <Resource Language="x-generate" />
<% for(var i = 0; i < manifest.Resources.length; i++) { -%>
    <%- manifest.Resources[i].toString() %>
<% } -%>
  </Resources>

  <Applications>
    <Application Id="App"
      Executable="$targetnametoken$.exe"
      EntryPoint="@SHORT_NAME@.App">
      <uap:VisualElements
        DisplayName="ms-resource:app_name"
        Description="ms-resource:app_description"
        Square150x150Logo="<%- manifest.Applications.Application.VisualElements.Square150x150Logo %>"
        Square44x44Logo="<%- manifest.Applications.Application.VisualElements.Square44x44Logo %>"
        BackgroundColor="<%- manifest.Applications.Application.VisualElements.BackgroundColor %>">
<% if (manifest.Applications.Application.VisualElements.LockScreen) { -%>
        <uap:LockScreen Notification="<%- manifest.Applications.Application.VisualElements.LockScreen.Notification %>"
                        BadgeLogo="<%- manifest.Applications.Application.VisualElements.LockScreen.BadgeLogo %>" />
<% } -%>
        <uap:DefaultTile Square71x71Logo="<%- manifest.Applications.Application.VisualElements.DefaultTile.Square71x71Logo %>"
<% if (manifest.Applications.Application.VisualElements.DefaultTile.Wide310x150Logo) { -%>
                         Wide310x150Logo="<%- manifest.Applications.Application.VisualElements.DefaultTile.Wide310x150Logo %>"
                         Square310x310Logo="<%- manifest.Applications.Application.VisualElements.DefaultTile.Square310x310Logo %>"
<% } -%>
                         >
<% if (manifest.Applications.Application.VisualElements.DefaultTile.ShowNameOnTiles) { -%>
          <uap:ShowNameOnTiles>
<% if (manifest.Applications.Application.VisualElements.DefaultTile.ShowNameOnTiles.square150x150Logo) { -%>
            <uap:ShowOn Tile="square150x150Logo" />
<% } -%>
<% if (manifest.Applications.Application.VisualElements.DefaultTile.ShowNameOnTiles.square310x310Logo) { -%>
            <uap:ShowOn Tile="square310x310Logo" />
<% } -%>
<% if (manifest.Applications.Application.VisualElements.DefaultTile.ShowNameOnTiles.wide310x150Logo) { -%>
            <uap:ShowOn Tile="wide310x150Logo" />
<% } -%>
          </uap:ShowNameOnTiles>
<% } -%>
        </uap:DefaultTile>
        <uap:SplashScreen Image="<%- manifest.Applications.Application.VisualElements.SplashScreen.Image %>" BackgroundColor="<%- manifest.Applications.Application.VisualElements.SplashScreen.BackgroundColor %>" />
      </uap:VisualElements>

<% if (manifest.Extensions.length > 0) { -%>
      <Extensions>
<% for(var i = 0; i < manifest.Extensions.length; i++) { -%>
      <%- manifest.Extensions[i].toString() %>
<% } -%>
      </Extensions>
<% } -%>

    </Application>
  </Applications>

<% if (manifest.PackageExtensions.length > 0) { -%>
  <Extensions>
<% for(var i = 0; i < manifest.PackageExtensions.length; i++) { -%>
    <%- manifest.PackageExtensions[i] %>
<% } -%>
  </Extensions>
<% } -%>

  <Capabilities>
<% for(var i = 0; i < manifest.Capabilities.length; i++) { -%>
    <%- manifest.Capabilities[i].toString() %>
<% } -%>
  </Capabilities>
</Package>
